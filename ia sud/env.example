# Chave secreta para sessões Flask
SECRET_KEY=your-secret-key-here-change-this-in-production

# Chave JWT (pode ser a mesma do SECRET_KEY)
JWT_SECRET=your-jwt-secret-here

# API Key do Google Gemini (pode usar uma ou múltiplas separadas por vírgula)
GEMINI_API_KEY=your-gemini-api-key-here
# Ou use múltiplas chaves (separadas por vírgula) para rotação automática
# GEMINI_API_KEYS=key1,key2,key3,key4,key5

# Google OAuth Client ID
GOOGLE_CLIENT_ID=your-google-client-id-here

# Porta do servidor (padrão: 5000)
PORT=5000

# Ambiente (development ou production)
FLASK_ENV=production

